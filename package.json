    "eslint": "^8.49.0",
    "prettier": "^3.0.3",
    "prettier-plugin-svelte": "^3.1.2",
    "storybook": "^7.4.1",
    "turbo": "^1.10.13",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "@changesets/cli": "^2.26.2"
  }
