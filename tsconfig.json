{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "esnext"
    ],
    "module": "esNext",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strict": false,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "preserve"
  },
  "paths": {
    "~/*": [
      "packages/*"
    ]
  },
  "compileOnSave": false,
}