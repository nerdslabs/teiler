{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es6",
    "lib": ["esnext", "DOM"],
    "module": "esNext",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strict": false,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": false,
    "skipLibCheck": true
  },
  "compileOnSave": false
}
