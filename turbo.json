{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "storybook": {
      "dependsOn": [
        "^storybook"
      ]
    },
    "//#storybook": {
      "dependsOn": [
        "wait"
      ]
    },
    "//#wait": {
      "dependsOn": []
    }
  }
}
