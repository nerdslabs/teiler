{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**"
      ]
    },
    "dev": {
      "dependsOn": ["^wait"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": [
        "build"
      ],
      "outputs": [],
      "inputs": [
        "src/**/*.svelte",
        "src/**/*.ts"
      ]
    },
    "lint": {
      "outputs": []
    },
    "wait": {
      "cache": false
    }
  }
}